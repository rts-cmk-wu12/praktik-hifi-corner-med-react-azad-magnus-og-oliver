{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~assets/*": [
                "src/assets/*"
            ],
            "~components/*": [
                "src/components/*"
            ],
            "~img/*": [
                "src/img/*"
            ],
            "~pages/*": [
                "src/pages/*"
            ],
            "~style/*": [
                "src/style/*"
            ],
            "~utility/*": [
                "src/utility/*"
            ],
            "~/*": [
                "src/*"
            ],
            "~tests/*": [
                "src/tests/*"
            ]
        }
    }
}